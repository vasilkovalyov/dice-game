{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/hooks/*": [
        "./src/shared/hooks/*"
      ],
      "@/services/*": [
        "./src/shared/services/*"
      ],
      "@/themes/*": [
        "./src/shared/themes/*"
      ],
      "@/types/*": [
        "./src/shared/types/*"
      ],
      "@/ui/*": [
        "./src/shared/ui/*"
      ],
      "@/utils/*": [
        "./src/shared/utils/*"
      ],
      "@/widgets/*": [
        "./src/widgets/*"
      ],
      "@/styles/*": [
        "./src/styles/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": [
    "node_modules"
  ]
}
